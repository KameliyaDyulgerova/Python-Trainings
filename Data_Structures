--9.

name = 'Ka'
age = 27
print('Hi' + name + '. You are' + str(age) + ' years olf.')
print(f'Hi {name}. You are {age} years old.')

print('Hi {}. Your are {} years old.'.format(name, age))
print('Hi {1}. You are {0} years olf.'.format(age, name))
print('Hi {new_name}. You are {age} years old.'.format(new_name='Sally', age=100))
print('\n')

selfish = '01234567'
#          01234567
print((selfish[0]))
print((selfish[7]))
print((selfish[0:2]))
print((selfish[0:7]))
print((selfish[0:8]))
print((selfish[0:8:2]))
print((selfish[1:5]))
print((selfish[::1]))
print((selfish[-1]))
print((selfish[-2]))
print((selfish[::-1]))
print((selfish[::-2]))
print('\n')

