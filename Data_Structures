basket = [1, 2, 3, 4, 5]
new_list = basket.append(100)
print(basket)
print(new_list)
basket.insert(4, 50)
print(basket)
basket.extend([10, 20, 30, 40])
print(basket)
print('\n')

basket.pop()
print(basket)
basket.pop(4)
print(basket)
basket.remove(100)
print(basket)
# basket.clear()
# print(basket)
print('\n')

print(basket.index(5))
print(5 in basket)
print(basket.count(4))
print('\n')

basket.sort()
print(basket)
new_basket = basket.copy()
new_basket.sort(reverse=True)
print(new_basket)
print(sorted(new_basket))
basket.reverse()
print(basket)
print('\n')


